datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String    @id @default(uuid())
  name        String
  email       String    @unique
  password    String
}

model Event {
  id          String      @id @default(uuid())
  title       String
  description String
  location    String

  // startDate   DateTime
  // endDate     DateTime

  organizer   String

  sessions    Session[]
  attendees   Attendee[]

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Attendee {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique

  events   Event[]
}

model Session {
  id                   String     @id @default(uuid())
  title                String
  description          String

  // startTime            DateTime
  // endTime              DateTime

  videoConferenceLink  String?
  chatEnabled          Boolean

  event                Event      @relation(fields: [eventId], references: [id])
  eventId              String

  speakers             Speaker[]
}

model Speaker {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique

  sessions Session[]
}
